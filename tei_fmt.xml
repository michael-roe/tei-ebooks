<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"
xmlns:tei="http://www.tei-c.org/ns/1.0"
xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<xsl:template match="/">
<html>
<body>

<h1 style="text-align:center"><xsl:value-of select="tei:TEI/tei:teiHeader/tei:fileDesc/tei:titleStmt/tei:title"/></h1>

<p style="text-align:center">By <xsl:value-of select="tei:TEI/tei:teiHeader/tei:fileDesc/tei:titleStmt/tei:author"/></p>

<xsl:for-each select="tei:TEI/tei:text/tei:body//tei:sp">
<p style="text-align:center; font-weight:bold"><xsl:value-of select="tei:speaker"/></p>
<p><xsl:value-of select="tei:p"/></p>
</xsl:for-each>

</body>
</html>
</xsl:template>
</xsl:stylesheet>
